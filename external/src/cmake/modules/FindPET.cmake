FIND_PATH(PET_INCLUDE_DIR pet.h)

FIND_LIBRARY(PET_LIBRARY NAMES pet)

IF (PET_INCLUDE_DIR AND PET_LIBRARY)
   SET(PET_FOUND TRUE)
ENDIF(PET_INCLUDE_DIR AND PET_LIBRARY)

IF(PET_FOUND)
  IF (NOT PET_FIND_QUIETLY)
     MESSAGE(STATUS "Found PET: ${PET_LIBRARY}")
  ENDIF(NOT PET_FIND_QUIETLY)
ELSE (PET_FOUND)
     IF (PET_FIND_REQUIRED)
     	MESSAGE(FATAL_ERROR "Could not find PET")
     ENDIF (PET_FIND_REQUIRED)
ENDIF (PET_FOUND)